  <script is:inline>
    const circle = document.querySelector(".circle");
    const visionText = document.querySelector(".vision-text");
    const missionText = document.querySelector(".mission-text");
    const visionCircleText = document.querySelector(".circle-text.vision");
    const missionCircleText = document.querySelector(".circle-text.mission");
  
    const transitionDuration = 8000;
    let isVision = true;
  
    function toggleState() {
      if (isVision) {
        visionText.classList.remove("active");
        missionText.classList.add("active");
        circle.classList.add("mission");
        visionCircleText.classList.remove("vision");
        visionCircleText.classList.add("mission");
        missionCircleText.classList.remove("mission");
        missionCircleText.classList.add("vision");
      } else {
        missionText.classList.remove("active");
        visionText.classList.add("active");
        circle.classList.remove("mission");
        missionCircleText.classList.remove("vision");
        missionCircleText.classList.add("mission");
        visionCircleText.classList.remove("mission");
        visionCircleText.classList.add("vision");
      }
      isVision = !isVision;
    }
  
    setInterval(toggleState, transitionDuration);
  </script>
  
