---
import Collaboration from "../icons/Collaboration.astro";
import InnovationIcon from "../icons/InnovationIcon.astro";
import SustainabilityIcon from "../icons/SustainabilityIcon.astro";
import TrustIcon from "../icons/TrustIcon.astro";
import { BackgroundGradientAnimation } from "../ui/background-gradient-animation";
---


  <!-- Background Gradient Animation -->
  <BackgroundGradientAnimation client:only="react">

    <!-- Foreground Content -->
    <div class="w-full h-[600px]  container mx-auto px-6 md:py-32">
      <h2 class="text-4xl md:text-5xl font-bold text-center my-12 text-white">
        Core Values
      </h2>

      <div class="grid  grid-cols-1 md:grid-cols-2 gap-10 justify-between text-white">
        <!-- Left side values -->
        <div class="space-y-10">
          <div class="flex items-start gap-4 ">
            <InnovationIcon />
            <div class="pointer-events-auto">
              <h3 class="text-2xl font-semibold mb-1">Innovation & Excellence</h3>
              <p class="text-gray-300 font-normal">Building future-ready platforms that leverage AI, Web3.0, and cloud technologies.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 ">
            <SustainabilityIcon />
            <div class="pointer-events-auto">
              <h3 class="text-2xl font-semibold mb-1">Sustainability & Inclusion</h3>
              <p class="text-gray-300 font-normal">Promoting ethical AI, green computing, and inclusive digital transformation.</p>
            </div>
          </div>
        </div>

        <!-- Right side values -->
        <div class="space-y-10">
          <div class="flex items-start gap-4 ">
            <Collaboration />
            <div class="pointer-events-auto">
              <h3 class="text-2xl font-semibold mb-1">Collaboration & Growth</h3>
              <p class="text-gray-300 font-normal">Driving cross-industry partnerships and fostering digital economic growth.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 ">
            <TrustIcon />
            <div class="pointer-events-auto">
              <h3 class="text-2xl font-semibold mb-1">Trust & Transparency</h3>
              <p class="text-gray-300 font-normal">Upholding accountability in governance and operations.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </BackgroundGradientAnimation>


