---
import { Image } from "astro:assets";
import gaurdTime from "../../../public/assets/gaurdtime.svg";
import netLogo from "../../../public/assets/net-logo.svg";
import sirius from "../../../public/assets/sirius.svg";
import brahmaandLogo from "../../../public/assets/brahmaand-logo.svg";
import partnerBg from "../../../public/assets/partner-bg.svg";
---

<section class="relative w-full h-[600px] md:h-[700px] bg-black text-white overflow-hidden">

  <div class="absolute inset-0 w-full h-full z-0">
    <Image 
      src={partnerBg} 
      alt="Partners Background" 
      class="w-full h-full object-cover" 
      loading="eager"
      decoding="async"
    />
  </div>

  <div class="  w-full h-full flex items-center justify-center">
    <div class="hidden md:block w-full h-full  ">
      <div class="absolute left-[30%] top-[30%] transform -translate-x-1/2 -translate-y-1/2 pointer-events-auto">
        <div class="bg-white rounded-md p-4 shadow-md flex items-center justify-center w-[250px] h-[80px]">
          <Image src={gaurdTime} alt="Guardtime Logo" class="w-full h-full object-contain" />
        </div>
      </div>

      <div class="absolute left-[42%] top-[62%] transform -translate-x-1/2 -translate-y-1/2 pointer-events-auto">
        <div class="bg-white rounded-md p-4 shadow-md flex items-center justify-center w-[250px] h-[80px]">
          <Image src={netLogo} alt="NET Logo" class="w-full h-full object-contain" />
        </div>
      </div>

      <div class="absolute right-[15%] top-[15%] transform -translate-x-1/2 -translate-y-1/2 pointer-events-auto">
        <div class="bg-white rounded-md p-4 shadow-md flex items-center justify-center w-[250px] h-[80px]">
          <Image src={sirius} alt="Sirius Logo" class="w-full h-full object-contain" />
        </div>
      </div>

      <div class="absolute right-[0%] top-[47%] transform -translate-x-1/2 -translate-y-1/2 pointer-events-auto">
        <div class="bg-white rounded-md p-4 shadow-md flex items-center justify-center w-[250px] h-[80px]">
          <Image src={brahmaandLogo} alt="Brahmaand Logo" class="w-full h-full object-contain" />
        </div>
      </div>
    </div>

  
    <div class=" relative flex flex-col gap-8 items-center justify-center md:hidden w-full h-full">
      <div class="bg-white rounded-md p-4 shadow-md flex items-center justify-center w-[220px] h-[70px] pointer-events-auto">
        <Image src={gaurdTime} alt="Guardtime Logo" class="w-full h-full object-contain" />
      </div>

      <div class="bg-white rounded-md p-4 shadow-md flex items-center justify-center w-[220px] h-[70px] pointer-events-auto">
        <Image src={netLogo} alt="NET Logo" class="w-full h-full object-contain" />
      </div>

      <div class="bg-white rounded-md p-4 shadow-md flex items-center justify-center w-[220px] h-[70px] pointer-events-auto">
        <Image src={sirius} alt="Sirius Logo" class="w-full h-full object-contain" />
      </div>

      <div class="bg-white rounded-md p-4 shadow-md flex items-center justify-center w-[220px] h-[70px] pointer-events-auto">
        <Image src={brahmaandLogo} alt="Brahmaand Logo" class="w-full h-full object-contain" />
      </div>
    </div>

  </div>

</section>
