---
import { Image } from 'astro:assets';
const { number, title, description, image, reverse = false } = Astro.props;
---

<section class="bg-black text-white py-6 lg:py-12 overflow-hidden">
  <div class="w-full mx-auto lg:px-12">
    <div class={`flex flex-col ${reverse ? 'lg:flex-row-reverse' : 'lg:flex-row'} items-center`}>
      
      <div class="w-full px-8 lg:w-1/2 mb-12 lg:mb-0 lg:px-12">
        <p class="text-purple-500 text-xl mb-4 font-medium">{number}</p>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-medium mb-6 md:mb-8">{title}</h2>
        <p class="text-lg md:text-xl text-gray-300 font-light leading-snug">
          {description}
        </p>
      </div>


      <div class="w-full lg:w-1/2 relative">
        <div class="relative w-full md:rounded-full aspect-square overflow-hidden">
          <Image
            src={image}
            alt={title}
            class="absolute inset-0 w-full h-full object-contain"
            loading="eager"
            decoding="async"
          />
        </div>
      </div>

    </div>
  </div>
</section>
